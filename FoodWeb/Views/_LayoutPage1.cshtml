<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/flexslider.css" rel="stylesheet" />
    <a href="~/fonts/Amble-Light-webfont.ttf"></a>
    <a href="~/fonts/glyphicons-halflings-regular.woff2"></a>
    <a href="~/fonts/glyphicons-halflings-regular.eot"></a>
    <a href="~/fonts/glyphicons-halflings-regular.ttf"></a>
    <a href="~/fonts/glyphicons-halflings-regular.woff"></a>
    <img src="~/fonts/glyphicons-halflings-regular.svg"/>
    <script src="~/js/jquery.flexslider.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/modernizr.js"></script>
</head>
<body>
    
    <div class="wrap">
        <div class="total">
            <div class="header">
                <div class="header_top_right">
                    <ul>
                        <li><a href="https://localhost:44316/Admin/Login">Login</a></li> |
                        <li><a href="#">Sign Up</a></li>
                    </ul>
                </div>
                <div class="clear"></div>

                <ul class="follow_icon">
                    <li><a href="#"><img src="~/images/fb.png" alt=""></a></li>
                    <li><a href="#"><img src="~/images/googleplus.png" alt=""></a></li>
                    <li><a href="#"><img src="~/images/tw.png" alt=""></a></li>
                    <li><a href="#"><img src="~/images/pinterest.png" alt=""></a></li>
                </ul>
                <div class="clear"></div>
            </div>
            <div class="header-bot">
                <div class="logo">
                    <a href="https://localhost:44316/">
                        <img src="~/images/logo.png" width="250px" height="250px" style=" padding-left: 40%" alt="" />
                    </a>
                </div>
                <div class="search-bar">
                    <input type="text" class="textbox" value=" Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                    <input name="searchsubmit" type="image" src="~/images/search-icon.png" value="Go" id="searchsubmit" class="btn">
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div>
                @RenderBody()
            </div>
            <div class="footer-bottom">
                <div class="wrap">
                    <div class="copy">

                    </div>
                </div>
            </div>
</body>
</html>
